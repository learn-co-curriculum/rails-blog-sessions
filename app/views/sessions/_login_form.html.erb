<div class="field">
  <%= form_tag sessions_path do %>
    <%= label_tag :email %><br>
    <%= text_field_tag :email %><br>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br>
    <%= label_tag :password_confirmation %><br>
    <%= password_field_tag :password_confirmation %>
    <div class="actions">
      <%= submit_tag "Log In" %>
    </div>
  <% end %>
</div>
